package util;

import java.util.ArrayList;

public class Emprestimo {
	public int indiceLivro;
	public String aluno;
	public static ArrayList<Emprestimo> emprestimos = new ArrayList<>();
	public Livro livro;

	public Emprestimo(int indiceLivro, String aluno, Livro livro) {
		this.indiceLivro = indiceLivro;
		this.aluno = aluno;
		this.livro = livro;
	}

	public static void emprestarLivro(int indiceLivro, String aluno) {
		emprestimos.add(new Emprestimo(indiceLivro, aluno));
		System.out.println("Livro \"" + livros.get(indiceLivro).titulo + "\" emprestado para " + aluno);
	}

	public static void listarEmprestimos() {
		System.out.println("Empr√©stimos realizados:");
		for (Emprestimo e : emprestimos) {
			System.out.println("Aluno: " + e.aluno + " | Livro: " + livros.get(e.indiceLivro).titulo);
		}
	}
}